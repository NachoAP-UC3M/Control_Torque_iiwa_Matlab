    </gazebo>
    <gazebo reference="${robot_name}_joint_6">
      <provideFeedback>true</provideFeedback>
    </gazebo>

    <!-- Link7 -->
    <gazebo reference="iiwa_link_7">
      <material>Gazebo/Grey</material>
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
    </gazebo>
    <gazebo reference="${robot_name}_joint_7">
      <provideFeedback>true</provideFeedback>
    </gazebo>

  </xacro:macro>

</robot>

